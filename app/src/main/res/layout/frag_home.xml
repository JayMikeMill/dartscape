<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FragDefault"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="@dimen/frag_padding"
        android:splitMotionEvents="false"
        app:layout_constraintBottom_toTopOf="@+id/glHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.25"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/control_padding"
                android:layout_weight="1"
                android:splitMotionEvents="false">

                <view
                    android:id="@+id/spinHomeGame"
                    style="@style/SpinnerDefault"
                    class="com.gworks.dartscape.ui.SuperSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    tools:listitem="@layout/item_spinner" />

                <Space
                    android:id="@+id/spaceHome1"
                    android:layout_width="@dimen/control_padding"
                    android:layout_height="match_parent" />

                <view
                    android:id="@+id/spinHomeGameMode"
                    style="@style/SpinnerDefault"
                    class="com.gworks.dartscape.ui.SuperSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    tools:listitem="@layout/item_spinner" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lHomeVariant"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/control_padding"
                android:layout_weight="1"
                android:splitMotionEvents="false">

                <view
                    android:id="@+id/spinHomeGameVariant"
                    style="@style/SpinnerDefault"
                    class="com.gworks.dartscape.ui.SuperSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    tools:listitem="@layout/item_spinner" />

                <Space
                    android:id="@+id/spaceHome2"
                    android:layout_width="@dimen/control_padding"
                    android:layout_height="match_parent" />

                <view
                    android:id="@+id/spinHomeGameVariant2"
                    style="@style/SpinnerDefault"
                    class="com.gworks.dartscape.ui.SuperSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:listitem="@layout/item_spinner" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/control_padding"
                android:layout_weight="1"
                android:splitMotionEvents="false">

                <view
                    android:id="@+id/spinHomeLegs"
                    style="@style/SpinnerDefault"
                    class="com.gworks.dartscape.ui.SuperSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    tools:listitem="@layout/item_spinner" />

                <Space
                    android:id="@+id/spaceHomeLegsSets"
                    android:layout_width="@dimen/control_padding"
                    android:layout_height="match_parent" />

                <view
                    android:id="@+id/spinHomeSets"
                    style="@style/SpinnerDefault"
                    class="com.gworks.dartscape.ui.SuperSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    tools:ignore="DuplicateSpeakableTextCheck"
                    tools:listitem="@layout/item_spinner" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/control_padding"
                android:layout_weight="1">

                <view
                    android:id="@+id/spinHomeSlot1"
                    style="@style/SpinnerDefault"
                    class="com.gworks.dartscape.ui.SuperSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:dropDownWidth="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/item_spinner_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:splitMotionEvents="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/spinHomeSlot1"
                    app:layout_constraintTop_toTopOf="parent">

                    <view
                        android:id="@+id/spinHomePlayerSlot1"
                        style="@style/SpinnerDefault"
                        class="com.gworks.dartscape.ui.SuperSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/control_padding"
                        android:layout_weight="1"
                        android:visibility="visible"
                        tools:ignore="DuplicateSpeakableTextCheck"
                        tools:listitem="@layout/item_spinner" />

                    <view
                        android:id="@+id/spinHomeTeammateSlot1"
                        style="@style/SpinnerDefault"
                        class="com.gworks.dartscape.ui.SuperSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/spinHomeBotSlot1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/control_padding"
                        android:layout_weight="1"
                        android:background="@drawable/drw_control_bg"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <SeekBar
                            android:id="@+id/seekHomeBot1"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:max="1000"
                            android:progress="0"
                            android:progressDrawable="@drawable/drw_seek_bar"
                            android:thumb="@drawable/drw_seek_thumb" />

                        <com.gworks.dartscape.ui.MultiView
                            android:id="@+id/mvHomeBotLabel1"
                            style="@style/MultiViewLabel"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:text="NORMAL\n(1.4)" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/control_padding"
                android:layout_weight="1">

                <view
                    android:id="@+id/spinHomeSlot2"
                    style="@style/SpinnerDefault"
                    class="com.gworks.dartscape.ui.SuperSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:dropDownWidth="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/item_spinner_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:splitMotionEvents="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/spinHomeSlot2"
                    app:layout_constraintTop_toTopOf="parent">

                    <view
                        android:id="@+id/spinHomePlayerSlot2"
                        style="@style/SpinnerDefault"
                        class="com.gworks.dartscape.ui.SuperSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/control_padding"
                        android:layout_weight="1"
                        tools:ignore="DuplicateSpeakableTextCheck"
                        tools:listitem="@layout/item_spinner" />

                    <view
                        android:id="@+id/spinHomeTeammateSlot2"
                        style="@style/SpinnerDefault"
                        class="com.gworks.dartscape.ui.SuperSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/spinHomeBotSlot2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/control_padding"
                        android:layout_weight="1"
                        android:background="@drawable/drw_control_bg"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <SeekBar
                            android:id="@+id/seekHomeBot2"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:max="1000"
                            android:progress="0"
                            android:progressDrawable="@drawable/drw_seek_bar"
                            android:thumb="@drawable/drw_seek_thumb" />

                        <com.gworks.dartscape.ui.MultiView
                            android:id="@+id/mvHomeBotLabel2"
                            style="@style/MultiViewLabel"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:text="NORMAL\n(1.4)" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/control_padding"
                android:layout_weight="1">

                <view
                    android:id="@+id/spinHomeSlot3"
                    style="@style/SpinnerDefault"
                    class="com.gworks.dartscape.ui.SuperSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:dropDownWidth="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/item_spinner_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:splitMotionEvents="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/spinHomeSlot3"
                    app:layout_constraintTop_toTopOf="parent">

                    <view
                        android:id="@+id/spinHomePlayerSlot3"
                        style="@style/SpinnerDefault"
                        class="com.gworks.dartscape.ui.SuperSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/control_padding"
                        android:layout_weight="1"
                        tools:ignore="DuplicateSpeakableTextCheck"
                        tools:listitem="@layout/item_spinner" />

                    <view
                        android:id="@+id/spinHomeTeammateSlot3"
                        style="@style/SpinnerDefault"
                        class="com.gworks.dartscape.ui.SuperSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/spinHomeBotSlot3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/control_padding"
                        android:layout_weight="1"
                        android:background="@drawable/drw_control_bg"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <SeekBar
                            android:id="@+id/seekHomeBot3"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:max="1000"
                            android:progress="0"
                            android:progressDrawable="@drawable/drw_seek_bar"
                            android:thumb="@drawable/drw_seek_thumb" />

                        <com.gworks.dartscape.ui.MultiView
                            android:id="@+id/mvHomeBotLabel3"
                            style="@style/MultiViewLabel"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:text="NORMAL\n(1.4)" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/control_padding"
                android:layout_weight="1">

                <view
                    android:id="@+id/spinHomeSlot4"
                    style="@style/SpinnerDefault"
                    class="com.gworks.dartscape.ui.SuperSpinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".3"
                    android:dropDownWidth="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/item_spinner_icon" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:splitMotionEvents="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/spinHomeSlot4"
                    app:layout_constraintTop_toTopOf="parent">

                    <view
                        android:id="@+id/spinHomePlayerSlot4"
                        style="@style/SpinnerDefault"
                        class="com.gworks.dartscape.ui.SuperSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/control_padding"
                        android:layout_weight="1"
                        tools:ignore="DuplicateSpeakableTextCheck"
                        tools:listitem="@layout/item_spinner" />

                    <view
                        android:id="@+id/spinHomeTeammateSlot4"
                        style="@style/SpinnerDefault"
                        class="com.gworks.dartscape.ui.SuperSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="6dp"
                        android:layout_weight="1"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/spinHomeBotSlot4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/control_padding"
                        android:layout_weight="1"
                        android:background="@drawable/drw_control_bg"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <SeekBar
                            android:id="@+id/seekHomeBot4"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:max="1000"
                            android:progress="0"
                            android:progressDrawable="@drawable/drw_seek_bar"
                            android:thumb="@drawable/drw_seek_thumb" />

                        <com.gworks.dartscape.ui.MultiView
                            android:id="@+id/mvHomeBotLabel4"
                            style="@style/MultiViewLabel"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.5"
                            android:text="NORMAL\n(1.4)" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/lHomeGameStart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".7"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <LinearLayout
                android:id="@+id/lHomeGameStartBottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:splitMotionEvents="false">

                <com.gworks.dartscape.ui.MultiView
                    android:id="@+id/btnHomeReturnToGame"
                    style="@style/MultiViewDefault"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/return_to_game"
                    app:textSizeRatio="1" />

                <Space
                    android:id="@+id/spaceHomeReturnStart"
                    android:layout_width="@dimen/control_padding"
                    android:layout_height="match_parent" />

                <com.gworks.dartscape.ui.MultiView
                    android:id="@+id/btnHomeStartGame"
                    style="@style/MultiViewDefault"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/start_game"
                    app:textSizeRatio="1" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".85" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorButtonNormal"
        android:orientation="vertical"
        android:paddingTop="@dimen/control_padding"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/glHome"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <view
                android:id="@+id/btnHomePlayers"
                style="@style/MultiViewTransparent"
                class="com.gworks.dartscape.ui.MultiView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="@dimen/control_padding"
                android:text="@string/players"
                custom:icon1="@drawable/ic_users_trio" />

            <view
                android:id="@+id/btnHomeStats"
                style="@style/MultiViewTransparent"
                class="com.gworks.dartscape.ui.MultiView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="@dimen/control_padding"
                android:text="@string/stats"
                custom:icon1="@drawable/ic_stats" />

            <view
                android:id="@+id/btnHomeSettings"
                style="@style/MultiViewTransparent"
                class="com.gworks.dartscape.ui.MultiView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="@dimen/control_padding"
                android:text="@string/settings"
                custom:icon1="@drawable/ic_settings" />

            <view
                android:id="@+id/btnHomeHelp"
                style="@style/MultiViewTransparent"
                class="com.gworks.dartscape.ui.MultiView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="@dimen/control_padding"
                android:text="@string/help"
                custom:icon1="@drawable/ic_help" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

