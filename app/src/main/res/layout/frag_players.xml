<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FragDefault"
    android:padding="0dp"
    android:splitMotionEvents="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:splitMotionEvents="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <view
            android:id="@+id/rvDiagPlayersList"
            class="com.gworks.dartscape.ui.PlayersRecycleView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/frag_padding"
            android:layout_marginTop="@dimen/frag_padding"
            android:layout_marginRight="@dimen/frag_padding"
            android:layout_marginBottom="@dimen/frag_padding"
            android:layout_weight="1"
            android:background="@drawable/drw_control_bg"
            android:orientation="vertical"
            android:padding="2dp"
            tools:listitem="@layout/item_recycle_player" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorButtonNormal"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lBtnDiagPlayersNew"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <view
                    android:id="@+id/btnDiagPlayersNew"
                    style="@style/MultiViewTransparent"
                    class="com.gworks.dartscape.ui.MultiView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/control_padding"
                    android:text="@string/add"
                    app:layout_constraintDimensionRatio="1:.8"
                    app:layout_constraintHeight_max="150dp"
                    custom:icon1="@drawable/ic_user_add"
                    tools:layout_editor_absoluteY="6dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lBtnDiagPlayersEditSave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <view
                    android:id="@+id/btnDiagPlayersEditSave"
                    style="@style/MultiViewTransparent"
                    class="com.gworks.dartscape.ui.MultiView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/control_padding"
                    android:text="@string/edit"
                    app:layout_constraintDimensionRatio="1:.8"
                    app:layout_constraintHeight_max="150dp"
                    custom:icon1="@drawable/ic_user_edit"
                    tools:layout_editor_absoluteY="6dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lBtnDiagPlayersDelete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <view
                    android:id="@+id/btnDiagPlayersDelete"
                    style="@style/MultiViewTransparent"
                    class="com.gworks.dartscape.ui.MultiView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:paddingBottom="@dimen/control_padding"
                    android:text="@string/delete"
                    app:layout_constraintDimensionRatio="1:.8"
                    app:layout_constraintHeight_max="150dp"
                    custom:icon1="@drawable/ic_user_remove"
                    tools:layout_editor_absoluteY="6dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>